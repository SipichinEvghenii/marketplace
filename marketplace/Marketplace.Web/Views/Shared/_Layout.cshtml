@using System.IdentityModel.Claims
@using System.Security.Principal
@{
    ViewBag.Title = "Fruitables - Vegetable Website";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title</title>
    
    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="~/Content/styles/style.min.css"/>
    <link rel="stylesheet" href="~/Content/styles/bootstrap.min.css"/>

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/lib/lightbox/css/lightbox.min.css" asp-append-version="true" rel="stylesheet">
    <link href="~/Content/lib/owlcarousel/assets/owl.carousel.min.css" asp-append-version="true" rel="stylesheet">
</head>
<body>
<header>
        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <!-- Top Bar -->
            <div class="container topbar bg-primary d-none d-lg-block">
                <!-- Top Bar Content -->
            </div>
            <!-- Navbar Content -->
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <!-- Brand -->
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <h1 class="text-primary display-6">Fruitables</h1>
                    </a>
                    <!-- Toggler Button -->
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <!-- Navbar Links -->
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <!-- Navigation Links -->
                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
                            <a asp-controller="Home" asp-action="Shop" class="nav-item nav-link">Shop</a>
                            <a asp-controller="Home" asp-action="ShopDetail" class="nav-item nav-link">Shop Detail</a>
                            <!-- Conditional Admin Links -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                var user = HttpContext.Current.User as IPrincipal;
                                var roles = Roles.GetRolesForUser(user.Identity.Name);
                                if (roles.FirstOrDefault() == "Admin")
                                {
                                    <a href="@Url.Action("Index", "Order")" class="nav-item nav-link">Orders</a>
                                    <a href="@Url.Action("Index", "User")" class="nav-item nav-link">Users</a>
                                }
                            }
                            <!-- Dropdown Links -->
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <a href="@Url.Action("Cart", "Home")" class="dropdown-item">Cart</a>
                                    <a href="@Url.Action("Checkout", "Home")" class="dropdown-item">Checkout</a>
                                    <a href="@Url.Action("Testimonial", "Home")" class="dropdown-item">Testimonial</a>
                                    <a href="@Url.Action("PageNotFound", "Home")" class="dropdown-item">PageNotFound</a>
                                    <a href="@Url.Action("Contact", "Home")" class="dropdown-item">Contact</a>
                                    <a href="@Url.Action("Shop", "Home")" class="dropdown-item">Shop</a>
                                    <a href="@Url.Action("ShopDetail", "Home")" class="dropdown-item">ShopDetail</a>
                                </div>
                            </div>
                            <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link">Contact</a>
                        </div>
                        <!-- Search and User Links -->
                        <div class="d-flex m-3 me-0">
                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                                <i class="fas fa-search text-primary"></i>
                            </button>
                            <a href="#" class="position-relative me-4 my-auto">
                                <i class="fa fa-shopping-bag fa-2x"></i>
                                <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                            </a>
                            
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Logout", "Account")" class="my-auto">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Account")" class="my-auto">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->

    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                        <span id="search-icon-1" class="input-group-text p-3">
                            <i class="fa fa-search"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Search End -->
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

