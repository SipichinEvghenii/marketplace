@model IEnumerable<Marketplace.Domain.Entities.Order>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<style>
    .ght47 {
        margin-top: 10%;
    }
    
    .table {
        margin-bottom: 30%;
    }
</style>

<div class="container p-3 ght47">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Order" asp-action="Create" class="btn btn-primary"> <i class="bi bi-file-earmark-plus-fill"></i> Add new order</a>
        </div>
        <br/>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%; margin-top: 20px">
        <thead>
        <tr>
            <th>Order Id</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>User</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>@order.User.Email</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>